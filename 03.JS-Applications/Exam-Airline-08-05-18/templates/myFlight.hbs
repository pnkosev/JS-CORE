{{#each myFlights}}
<div class="flight-ticket">
    <div class="flight-left">
        <img src="{{image}}" alt="">
    </div>
    <div class="flight-right">
        <div>
            <h3>{{destination}}</h3><span>{{departure}}</span>
        </div>
        <div>
            from {{origin}} <span>14:00</span>
        </div>
        <p>{{seat}} Seats ({{cost}} $ per seat) </p>
        <a href="#" class="remove" data-id="{{_id}}">REMOVE</a>
        <a href="#" class="details" data-id="{{_id}}">DETAILS</a>
    </div>
</div>
{{/each}}