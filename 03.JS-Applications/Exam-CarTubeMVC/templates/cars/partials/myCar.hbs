<div class="my-listing">
    <p id="listing-title">{{title}}</p>
    <img src="{{imageUrl}}">

    <div class="listing-props">
        <h2>Brand: {{brand}}</h2>
        <h3>Model: {{model}}</h3>
        <h3>Year: {{year}}</h3>
        <h3>Price: {{price}} $</h3>
    </div>
    <div class="my-listing-buttons">
        <a href="#/details/{{_id}}" class="my-button-list">Details</a>
        <a href="#/edit/:{{_id}}" class="my-button-list">Edit</a>
        <form action="#/delete" method="post">
            <input type="hidden" name="carId" value="{{_id}}">
            <input type="submit" class="my-button-list" value="Delete">
        </form>
    </div>
</div>